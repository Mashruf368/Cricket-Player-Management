<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="477.0" prefWidth="846.0" stylesheets="@second.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.SecondController">
    <children>
        <!-- Background Image -->
        <ImageView fitHeight="558.0" fitWidth="908.0" layoutX="-28.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@guest1.jpg" />
            </image>
        </ImageView>

        <!-- Buttons -->
        <Button fx:id="searchPlayerButton" layoutX="250.0" layoutY="50.0" mnemonicParsing="false" onAction="#onSearchPlayerClick" prefHeight="74.0" prefWidth="339.0" text="SEARCH PLAYERS">
            <font>
                <Font size="24.0" />
            </font>
        </Button>
        <Button fx:id="searchClubButton" layoutX="250.0" layoutY="160.0" mnemonicParsing="false" onAction="#onSearchClubClick" prefHeight="74.0" prefWidth="339.0" text="SEARCH CLUBS">
            <font>
                <Font size="24.0" />
            </font>
        </Button>
        <Button fx:id="addPlayerButton" layoutX="250.0" layoutY="270.0" mnemonicParsing="false" onAction="#onaddplayerclick" prefHeight="74.0" prefWidth="339.0" text="ADD PLAYER">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        <Button fx:id="exitButton" layoutX="250.0" layoutY="380.0" mnemonicParsing="false" onAction="#onExitClick" prefHeight="74.0" prefWidth="339.0" text="EXIT">
            <font>
                <Font size="18.0" />
            </font>
        </Button>

        <!-- Additional Label -->
        <Label fx:id="secondtext" layoutX="20.0" layoutY="480.0" />
    </children>
</AnchorPane>
