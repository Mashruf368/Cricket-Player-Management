<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="215.0" prefWidth="303.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo1.HelloController">
    <!-- Title at the top -->
    <Text fx:id="welcomeText" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome to the club" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20" />

    <!-- Username Display (Dynamic) -->
    <Text fx:id="usernameText" style="-fx-font-size: 18px;" text="" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="60" />

    <!-- Left side buttons -->
    <Button fx:id="showPlayersButton" layoutX="20.0" layoutY="83.0" onAction="#showPlayers" text="Show My Players" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="83.0" />
    <Button fx:id="clubDetailsButton" layoutX="20.0" layoutY="127.0" text="Club Details" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="127.0" />

    <!-- Right side buttons -->
    <Button fx:id="sellPlayersButton" layoutX="158.0" layoutY="83.0" onAction="#openSellView" text="Sell Players" AnchorPane.leftAnchor="196.0" AnchorPane.topAnchor="83.0" />
    <Button fx:id="buyPlayersButton" layoutX="196.0" layoutY="127.0" onAction="#openBuyView" text="Buy Players" AnchorPane.leftAnchor="195.60000000000002" AnchorPane.topAnchor="127.0" />

</AnchorPane>
